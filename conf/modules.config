#!/usr/bin/env nextflow

/*
 * ---------------------------------------------------------
 *  Nextflow config file for module specific default options
 * ---------------------------------------------------------
 */

params {
    modules {
        'gffread_tx2pgene' {
            publish_dir         = 'variant_calling'
            publish_files       = false
            args                = "--table transcript_id,gene_id"
        }
        'salmon_alevin' {
            args                = ""
        }
        'salmon_index' {
            args                = ""
        }
        'alevinqc' {
            args                = ""
        }
        'multiqc' {
            args                = ""
        }
        'fastqc' {
            args                = ""
        }
        'star_genomegenerate' {
            args                = ""
        }
        'star_align' {
            args                = "--readFilesCommand zcat --runDirPerm All_RWX --outWigType bedGraph --twopassMode Basic --outSAMtype BAM SortedByCoordinate"
        }
        'kallistobustools_ref' {
            args                = ""
        }
        'kallistobustools_count' {
            args                = ""
        }
    }
}
